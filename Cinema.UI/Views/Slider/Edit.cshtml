@model SliderEditRequest
@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit Slider</h1>
        <a asp-action="index" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            Back to List
        </a>
    </div>
    <div class="row">
        <div class="col-md-8 mx-auto">
            <form class="user" asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="orderInput">Order</label>
                    <input asp-for="Order" class="form-control" id="orderInput" placeholder="Enter Order here..">
                    <span class="text-danger" asp-validation-for="Order"></span>
                </div>
                <div class="form-group">
                    <label for="imageInput">Image</label>
                    <input asp-for="Image" class="form-control-file" id="imageInput" onchange="previewImage(event)">
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>
                <div class="form-group">
                    <img id="imagePreview" src="@Model.ImageUrl" alt="Image Preview" style="max-width: 100%; height: auto; display: @(string.IsNullOrEmpty(Model.ImageUrl) ? "none" : "block");" />
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <button class="btn btn-primary" type="submit">
                    Edit News
                </button>
            </form>
        </div>
    </div>
</div>

@section scripts {
    @Html.Partial("_ValidationScriptsPartial");

}
