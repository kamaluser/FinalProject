        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card card-round">
                <div class="card-header">
                    <div class="card-head-row">
                        <div class="card-title">Monthly Revenue Statistics</div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="chart-container" style="min-height: 375px">
                        <canvas id="monthlyRevenueChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        fetch('/Api/Orders/last-month-count')
            .then(response => response.json())
            .then(data => {
                document.getElementById('orderCount').innerText = data;
            })
            .catch(error => {
                console.error('There was a problem with the fetch operation:', error);
                document.getElementById('orderCount').innerText = 'Error';
            });

        fetch('/Api/Orders/last-year-count')
            .then(response => response.json())
            .then(data => {
                document.getElementById('yearlyOrderCount').innerText = data;
            })
            .catch(error => {
                console.error('There was a problem with the fetch operation:', error);
                document.getElementById('yearlyOrderCount').innerText = 'Error';
            });

        fetch('/Api/Sessions/last-month-count')
            .then(response => response.json())
            .then(data => {
                document.getElementById('sessionCount').innerText = data;
            })
            .catch(error => {
                console.error('There was a problem with the fetch operation:', error);
                document.getElementById('sessionCount').innerText = 'Error';
            });

        fetch('/Api/Account/members-count')
            .then(response => response.json())
            .then(data => {
                document.getElementById('usersCount').innerText = data;
            })
            .catch(error => {
                console.error('There was a problem with the fetch operation:', error);
                document.getElementById('usersCount').innerText = 'Error';
            });

        fetch('/api/orders/monthly-count-current-year')
            .then(response => response.json())
            .then(data => {
                if (data && data.months && data.orders) {
                    var ctx = document.getElementById('monthlyOrderChart').getContext('2d');

                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: data.months,
                            datasets: [{
                                label: 'Monthly Order Count',
                                data: data.orders,
                                fill: false,
                                borderColor: 'rgba(75, 192, 192, 1)',
                                tension: 0.1
                            }]
                        },
                        options: {
                            responsive: true,
                            scales: {
                                x: {
                                    title: {
                                        display: true,
                                        text: 'Month'
                                    }
                                },
                                y: {
                                    title: {
                                        display: true,
                                        text: 'Order Count'
                                    },
                                    beginAtZero: true,
                                    ticks: {
                                        stepSize: 1,
                                    }
                                }
                            }
                        }
                    });
                } else {
                    console.error('Data is not in expected format:', data);
                }
            })
            .catch(error => {
                console.error('Error fetching data:', error);
            });

        fetch('/api/orders/monthly-revenue-current-year')
            .then(response => response.json())
            .then(data => {
                if (data && data.months && data.revenue) {
                    var ctx = document.getElementById('monthlyRevenueChart').getContext('2d');

                    new Chart(ctx, {
                        type: 'bar', // veya 'line' türünü kullanabilirsiniz
                        data: {
                            labels: data.months,
                            datasets: [{
                                label: 'Monthly Revenue ($)',
                                data: data.revenue,
                                backgroundColor: 'rgba(153, 102, 255, 0.5)',
                                borderColor: 'rgba(153, 102, 255, 1)',
                                borderWidth: 1,
                            }]
                        },
                        options: {
                            responsive: true,
                            scales: {
                                x: {
                                    title: {
                                        display: true,
                                        text: 'Month'
                                    },
                                    grid: {
                                        display: false
                                    }
                                },
                                y: {
                                    title: {
                                        display: true,
                                        text: 'Revenue ($)'
                                    },
                                    beginAtZero: true,
                                    ticks: {
                                        callback: function (value) {
                                            return '$' + value;
                                        }
                                    },
                                    grid: {
                                        color: 'rgba(153, 102, 255, 0.2)'
                                    }
                                }
                            },
                            plugins: {
                                legend: {
                                    display: true,
                                    position: 'top'
                                },
                                tooltip: {
                                    callbacks: {
                                        label: function (tooltipItem) {
                                            return 'Revenue: $' + tooltipItem.raw;
                                        }
                                    }
                                }
                            }
                        }
                    });

                } else {
                    console.error('Data is not in expected format:', data);
                }
            })
            .catch(error => {
                console.error('Error fetching data:', error);
            });
    });
</script>
<script>
    document.addEventListener('DOMContentLoaded', async function () {
        try {
            const response = await fetch('/api/languages/monthly-session-languages');
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }

            const sessionLanguages = await response.json();
            const labels = sessionLanguages.map(sl => sl.language);
            const data = sessionLanguages.map(sl => sl.sessionCount);
            console.log(data);
            const ctx = document.getElementById('languagePieChart').getContext('2d');
            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: labels,
                    datasets: [{
                        data: data,
                        backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0'],
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        tooltip: {
                            callbacks: {
                                label: function (tooltipItem) {
                                    return `${tooltipItem.label}: ${tooltipItem.raw}`;
                                }
                            }
                        }
                    },
                    layout: {
                        padding: {
                            top: 0,
                            bottom: 0,
                            left: 0,
                            right: 0
                        }
                    }
                }
            });

        } catch (error) {
            console.error('Error fetching session languages:', error);
        }
    });
</script>