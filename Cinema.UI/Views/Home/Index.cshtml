<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Fetch and display counts
        fetch('/api/orders/last-month-count')
            .then(response => response.json())
            .then(data => {
                document.getElementById('orderCount').innerText = data;
            })
            .catch(error => {
                console.error('There was a problem with the fetch operation:', error);
                document.getElementById('orderCount').innerText = 'Error';
            });

        fetch('/api/orders/last-year-count')
            .then(response => response.json())
            .then(data => {
                document.getElementById('yearlyOrderCount').innerText = data;
            })
            .catch(error => {
                console.error('There was a problem with the fetch operation:', error);
                document.getElementById('yearlyOrderCount').innerText = 'Error';
            });

        fetch('/api/sessions/last-month-count')
            .then(response => response.json())
            .then(data => {
                document.getElementById('sessionCount').innerText = data;
            })
            .catch(error => {
                console.error('There was a problem with the fetch operation:', error);
                document.getElementById('sessionCount').innerText = 'Error';
            });

        // Fetch and display monthly order counts chart
        fetch('/api/orders/monthly-count-current-year')
            .then(response => response.json())
            .then(data => {
                if (data && data.months && data.orders) {
                    var ctx = document.getElementById('monthlyOrderChart').getContext('2d');

                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: data.months, // Months as labels
                            datasets: [{
                                label: 'Monthly Order Count',
                                data: data.orders, // Corresponding counts
                                fill: false,
                                borderColor: 'rgba(75, 192, 192, 1)',
                                tension: 0.1
                            }]
                        },
                        options: {
                            responsive: true,
                            scales: {
                                x: {
                                    title: {
                                        display: true,
                                        text: 'Month'
                                    }
                                },
                                y: {
                                    title: {
                                        display: true,
                                        text: 'Order Count'
                                    },
                                    beginAtZero: true
                                }
                            }
                        }
                    });
                } else {
                    console.error('Data is not in expected format:', data);
                }
            })
            .catch(error => {
                console.error('Error fetching data:', error);
            });

    
    });
</script>

