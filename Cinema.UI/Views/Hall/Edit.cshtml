@model HallEditRequest
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<div class="container">

    <form asp-action="Edit" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SeatCount" class="control-label"></label>
            <input asp-for="SeatCount" class="form-control" />
            <span asp-validation-for="SeatCount" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BranchId" class="control-label"></label>
            <select asp-for="BranchId" class="form-control" asp-items="@(new SelectList(ViewBag.Branches, "Id", "Name"))">
                <option value="">Select Branch</option>
            </select>
            <span asp-validation-for="BranchId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Edit" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
